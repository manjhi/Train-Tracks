<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="manjinder.traintracks.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/TrainNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/buttonshap"
        android:padding="20dp"
        android:text="Search Train By No"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/buttonshap"
        android:padding="20dp"
        android:text="Seat availability"
        android:textAllCaps="false"
        android:textSize="20dp" />
    <Button
        android:id="@+id/LiveStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/buttonshap"
        android:padding="20dp"
        android:text="Check Live Status"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/BetweenStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/buttonshap"
        android:padding="20dp"
        android:text="Trains Between Stations"
        android:textAllCaps="false"
        android:textSize="20dp" />


    <Button
        android:id="@+id/PNRstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/buttonshap"
        android:padding="20dp"
        android:text="Check PNR Status"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/StationtoCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/buttonshap"
        android:padding="20dp"
        android:text="Station to Code"
        android:textAllCaps="false"
        android:textSize="20dp" />
</LinearLayout>
</ScrollView>
