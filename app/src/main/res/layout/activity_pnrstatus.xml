<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="manjinder.traintracks.PNRStatus">
    <EditText
        android:id="@+id/pnrNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PNR No"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:inputType="number" />

        <Button
            android:id="@+id/CheckPNR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="20dp"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@drawable/buttonshap"
            android:layout_gravity="center"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
    <TextView

        android:id="@+id/pnrTrainNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Train No"
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_margin="2dp"
        android:padding="5dp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/pnrTrainName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Train Name"
        android:textSize="20dp"
        android:layout_margin="2dp"
        android:padding="5dp"/>
</LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/passangerNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:padding="6dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
    <TextView
        android:visibility="gone"
        android:id="@+id/pnrDateofJournay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:textSize="20dp"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:layout_gravity="start"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/pnrClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class"
            android:textSize="20dp"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <TextView
            android:visibility="gone"
            android:id="@+id/FromStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="From Station"
            android:textSize="20dp"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_gravity="start"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/ToStation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="To Station"
            android:textSize="20dp"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_gravity="right"/>

    </LinearLayout>
    <ListView
        android:id="@+id/PassangerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:divider="@null">
    </ListView>
</LinearLayout>
